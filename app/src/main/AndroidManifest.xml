<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.mab.booksreviews">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fidibo_reviews.FidiboReviewsActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".amazon_reviews.model.AmazonReviewsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".goodreads_reviews.GoodreadsReviewsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".book_detail.BookDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>